<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JawlineExerciseFaceYoga" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="windowSplashScreenBackground">#0000ff</item>
    </style>

    <style name="Theme.JawlineExerciseFaceYoga" parent="Base.Theme.JawlineExerciseFaceYoga" />

    <style name="textSemiBoldTheme">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="textRegularTheme">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="textMediumTheme">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="progressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/color_primary</item>
    </style>

    <style name="BottomNavigationView">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MessageDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/MessageDialogAnimation</item>
    </style>

    <style name="MessageDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>