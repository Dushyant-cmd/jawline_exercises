<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_24dp"
            android:paddingVertical="@dimen/_8dp"
            tools:context=".ui.settings.SettingsFragment">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32dp"
                android:letterSpacing="0.1"
                android:text="Settings"
                android:textSize="32sp"
                android:theme="@style/textSemiBoldTheme" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32dp"
                android:background="@drawable/rectangle_shape"
                android:backgroundTint="@color/color_primary"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_16dp"
                android:paddingVertical="@dimen/_16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:text="Get Plus"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:theme="@style/textSemiBoldTheme" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.1"
                        android:text="Special Offer for you"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:theme="@style/textSemiBoldTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/puchase_plan_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_shape"
                        android:backgroundTint="@color/light_yellow"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="@dimen/_32dp"
                        android:paddingVertical="@dimen/_8dp"
                        android:text="Claim"
                        android:textSize="16sp"
                        android:theme="@style/textSemiBoldTheme" />
                </LinearLayout>
            </LinearLayout>

            <!-- Profile, Restore Purchase, Language, reminders, rest duration, dark mode, contact us, privacy policy, terms of service. -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32dp"
                android:background="@drawable/rectangle_shape"
                android:backgroundTint="@color/light_grey"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_shape"
                    android:backgroundTint="@color/white"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_16dp">

                    <TextView
                        android:id="@+id/profile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/right_arrow_ic"
                        android:drawableTint="@color/light_grey"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="@dimen/_16dp"
                        android:text="Profile"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:theme="@style/textRegularTheme" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:background="@drawable/rectangle_shape"
                        android:backgroundTint="@color/light_grey" />

                    <TextView
                        android:id="@+id/rest_purchase_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16dp"
                        android:drawableEnd="@drawable/right_arrow_ic"
                        android:drawableTint="@color/light_grey"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="@dimen/_16dp"
                        android:text="Restore Purchase"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:theme="@style/textRegularTheme" />

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32dp"
                android:background="@drawable/rectangle_shape"
                android:backgroundTint="@color/light_grey"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_shape"
                    android:backgroundTint="@color/white"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_16dp">

                    <TextView
                        android:id="@+id/language_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/right_arrow_ic"
                        android:drawableTint="@color/light_grey"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="@dimen/_16dp"
                        android:text="Language"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:theme="@style/textRegularTheme" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:background="@drawable/rectangle_shape"
                        android:backgroundTint="@color/light_grey" />

                    <TextView
                        android:id="@+id/reminders_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16dp"
                        android:drawableEnd="@drawable/right_arrow_ic"
                        android:drawableTint="@color/light_grey"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="@dimen/_16dp"
                        android:text="Reminders"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:theme="@style/textRegularTheme" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:background="@drawable/rectangle_shape"
                        android:backgroundTint="@color/light_grey" />

                    <TextView
                        android:id="@+id/rest_duration_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16dp"
                        android:drawableEnd="@drawable/right_arrow_ic"
                        android:drawableTint="@color/light_grey"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="@dimen/_16dp"
                        android:text="Rest Duration"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:theme="@style/textRegularTheme" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:background="@drawable/rectangle_shape"
                        android:backgroundTint="@color/light_grey" />

                    <TextView
                        android:id="@+id/dark_mode_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16dp"
                        android:drawableEnd="@drawable/right_arrow_ic"
                        android:drawableTint="@color/light_grey"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="@dimen/_16dp"
                        android:text="Dark Mode"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:theme="@style/textRegularTheme" />

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32dp"
                android:background="@drawable/rectangle_shape"
                android:backgroundTint="@color/light_grey"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_shape"
                    android:backgroundTint="@color/white"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_16dp">

                    <TextView
                        android:id="@+id/contact_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/right_arrow_ic"
                        android:drawableTint="@color/light_grey"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="@dimen/_16dp"
                        android:text="Contact us"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:theme="@style/textRegularTheme" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:background="@drawable/rectangle_shape"
                        android:backgroundTint="@color/light_grey" />

                    <TextView
                        android:id="@+id/privacy_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16dp"
                        android:drawableEnd="@drawable/right_arrow_ic"
                        android:drawableTint="@color/light_grey"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="@dimen/_16dp"
                        android:text="Privacy policy"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:theme="@style/textRegularTheme" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:background="@drawable/rectangle_shape"
                        android:backgroundTint="@color/light_grey" />

                    <TextView
                        android:id="@+id/terms_service_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16dp"
                        android:drawableEnd="@drawable/right_arrow_ic"
                        android:drawableTint="@color/light_grey"
                        android:letterSpacing="0.1"
                        android:paddingHorizontal="@dimen/_16dp"
                        android:text="Terms of Service"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"
                        android:theme="@style/textRegularTheme" />

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>