<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_4dp"
        android:layout_marginVertical="@dimen/_8dp"
        app:cardBackgroundColor="@color/violet_light"
        app:cardCornerRadius="@dimen/_16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_growth"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="2dp"
                android:contentDescription="@null"
                android:scaleType="fitXY" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:layout_marginBottom="@dimen/_8dp"
                android:elevation="@dimen/_8dp"
                app:cardCornerRadius="@dimen/_8dp"
                app:cardElevation="@dimen/_8dp"
                app:cardMaxElevation="@dimen/_8dp">

                <TextView
                    android:id="@+id/total_ex_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8dp"
                    android:text="6/30"
                    android:textSize="@dimen/_16sp"
                    android:theme="@style/textSemiBoldTheme" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>