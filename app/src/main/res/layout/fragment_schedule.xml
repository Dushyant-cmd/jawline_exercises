<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bytezaptech.jawlineexercise_faceyoga.ui.onboard_details.ScheduleFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32dp"
                android:letterSpacing="0.1"
                android:text="Set Reminder"
                android:textSize="32sp"
                android:theme="@style/textSemiBoldTheme" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:letterSpacing="0.1"
                android:text="Achievement comes with discipline"
                android:textColor="@color/light_grey"
                android:textSize="16sp"
                android:theme="@style/textSemiBoldTheme" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:background="@drawable/rectangle_shape"
            android:padding="@dimen/_24dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.1"
                    android:id="@+id/time_tv"
                    tools:text="10:30 AM"
                    android:textSize="@dimen/_32sp"
                    android:theme="@style/textRegularTheme" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8dp"
                    android:letterSpacing="0.1"
                    android:text="Everyday"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:theme="@style/textRegularTheme" />

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_compat"
                style="@style/Widget.Material3.CompoundButton.MaterialSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_16dp"
                app:thumbTint="@color/white"
                app:trackTint="@color/light_grey" />
        </RelativeLayout>

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:backgroundTint="@color/violet_light"
            android:paddingVertical="12dp"
            android:text="Next"
            android:textSize="20sp"
            android:theme="@style/textSemiBoldTheme" />
    </RelativeLayout>
</layout>