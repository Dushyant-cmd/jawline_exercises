<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_24dp">

        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/square_radius"
            android:backgroundTint="#515151" />

        <RelativeLayout
            android:id="@+id/ll_sign_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:layout_marginTop="@dimen/_32dp"
            android:background="@drawable/square_radius"
            android:paddingHorizontal="@dimen/_8dp"
            android:paddingVertical="@dimen/_16dp">

            <ProgressBar
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/color_primary"
                android:id="@+id/p_bar_btn"/>

            <LinearLayout
                android:id="@+id/btn_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/iv_g_ic"
                    android:layout_marginStart="@dimen/_8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/google" />

                <TextView
                    android:layout_marginStart="@dimen/_16dp"
                    android:layout_toEndOf="@id/iv_g_ic"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:text="Continue with Google"
                    android:textSize="18sp"
                    android:theme="@style/textSemiBoldTheme" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_32dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="By proceeding, you acknowledge and accept \nour privacy policy and terms &amp; conditions"
            android:textColor="@color/light_grey"
            android:textSize="10sp" />

    </LinearLayout>
</layout>