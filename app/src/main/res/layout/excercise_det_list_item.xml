<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lottie_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_shape"
            android:backgroundTint="@color/light_pink"
            android:orientation="vertical"
            android:padding="@dimen/_8dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/a_one" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:orientation="vertical">

            <View
                android:id="@+id/devider_view"
                android:layout_width="60dp"
                android:layout_height="4dp"
                android:background="@drawable/rectangle_shape"
                android:backgroundTint="@color/red" />

            <TextView
                android:id="@+id/exc_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:text="UP &amp; DOWN NODS"
                android:theme="@style/textRegularTheme" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:text="60 seconds"
                android:textColor="@color/dark_grey"
                android:theme="@style/textRegularTheme" />
        </LinearLayout>
    </LinearLayout>
</layout>