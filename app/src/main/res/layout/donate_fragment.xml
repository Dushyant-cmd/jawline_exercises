<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.bytezaptech.jawlineexercise_faceyoga.ui.settings.SettingsViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/_4dp"
                android:contentDescription="@null"
                android:src="@drawable/up_icon" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_4dp"
                android:layout_marginEnd="-16dp"
                android:contentDescription="@null"
                android:rotation="45"
                android:src="@drawable/parent_comp_logo"
                app:tint="@color/light_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/fifty_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:id="@+id/fifty_ly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginTop="@dimen/_8dp"
                                android:padding="@dimen/_8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/fifty_coin" />

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:padding="@dimen/_8dp"
                                android:layout_marginBottom="@dimen/_8dp"
                                android:text="\u20b9 50"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/hd_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:id="@+id/hd_ly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginTop="@dimen/_8dp"
                                android:padding="@dimen/_8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/hundred_coin" />

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:padding="@dimen/_8dp"
                                android:layout_marginBottom="@dimen/_8dp"
                                android:text="\u20b9 100"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/two_fifty_hd_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:id="@+id/two_fifty_hd_ly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginTop="@dimen/_8dp"
                                android:padding="@dimen/_8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/two_fifty_hd" />

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:padding="@dimen/_8dp"
                                android:layout_marginBottom="@dimen/_8dp"
                                android:text="\u20b9 250"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/five_hd_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:id="@+id/five_hd_ly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginTop="@dimen/_8dp"
                                android:padding="@dimen/_8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/five_hd" />

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:padding="@dimen/_8dp"
                                android:layout_marginBottom="@dimen/_8dp"
                                android:text="\u20b9 500"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/seven_hd_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:id="@+id/seven_hd_ly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginTop="@dimen/_8dp"
                                android:padding="@dimen/_8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/seven_fifty_hd" />

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:padding="@dimen/_8dp"
                                android:layout_marginBottom="@dimen/_8dp"
                                android:text="\u20b9 750"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/thousand_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:id="@+id/thousand_ly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginTop="@dimen/_8dp"
                                android:padding="@dimen/_8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/thousand" />

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:padding="@dimen/_8dp"
                                android:layout_marginBottom="@dimen/_8dp"
                                android:text="\u20b9 1000"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_add_24"
                        android:drawablePadding="@dimen/_8dp"
                        android:drawableTint="@color/violet_light"
                        android:maxLength="5"
                        android:inputType="number"
                        android:hint="Enter manually"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/donate_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:backgroundTint="@color/yellow"
                    android:paddingVertical="12dp"
                    android:text="Donate"
                    android:textSize="20sp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:theme="@style/textSemiBoldTheme" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:text="100% of your donation is tax - deductible to the extent otherwise allowed by law."
                    android:textSize="12sp"
                    android:textColor="@color/dark_grey"/>

                <Button
                    android:id="@+id/ads_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:backgroundTint="@color/black"
                    android:visibility="visible"
                    android:paddingVertical="12dp"
                    android:text="Donate by watch AD"
                    android:textSize="20sp"
                    android:theme="@style/textSemiBoldTheme" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>